<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alertdialog_line"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/layout_0.5dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/layout_20dp"
        android:src="@drawable/qcenter_factoryname_area" />

    <TextView
        android:id="@+id/expand_dev_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/layout_0.5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/layout_10dp"
        android:textColor="@drawable/item_textview_checked"
        android:textSize="@dimen/textSize_14sp" />

</LinearLayout>