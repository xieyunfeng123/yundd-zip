<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alertdialog_line"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_3dp"
        android:layout_marginTop="@dimen/layout_3dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_3dp"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:layout_marginTop="@dimen/layout_3dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/list_send_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/biantai_gray"
                    android:textSize="@dimen/textSize_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:text="上传"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/textSize_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_3dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/list_patrol_subfatory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textSize_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传时间："
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textSize_12sp" />

                <TextView
                    android:id="@+id/list_patrol_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textSize_12sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_180dp"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/list_patrol_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/list_videodesp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/patrol_bg"
                android:ellipsize="end"
                android:paddingBottom="@dimen/layout_5dp"
                android:paddingLeft="@dimen/layout_10dp"
                android:paddingTop="@dimen/layout_5dp"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textSize_12sp" />

            <ImageView
                android:id="@+id/list_start_play"
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="@dimen/layout_60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/spotsupervision_playback_startbtn" />

            <TextView
                android:id="@+id/list_patrol_vediosize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/layout_10dp"
                android:layout_marginRight="@dimen/layout_10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>