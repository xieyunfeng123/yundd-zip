<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical" >

    <SurfaceView
        android:layout_width="0.1dp"
        android:layout_height="0.1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:background="@color/top_app_color"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/layout_20dp"
            android:scaleType="center"
            android:src="@drawable/registernaritem" />

        <TextView
            android:id="@+id/top_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/top_text_color"
            android:textSize="@dimen/textSize_18sp" />

        <TextView
            android:id="@+id/jump"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="@dimen/layout_10dp"
            android:paddingRight="@dimen/layout_10dp"
            android:text="@string/jump"
            android:textColor="@color/main_color"
            android:textSize="@dimen/textSize_16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/text_color" >

        <RelativeLayout
            android:id="@+id/surfaceview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/video_control_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/trans" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_8dp"
                android:src="@drawable/factory_device_bar_stop" />

            <ImageView
                android:id="@+id/vedio_take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_10dp"
                android:layout_toLeftOf="@+id/vedio_snapshot"
                android:src="@drawable/factory_device_voice" />

            <ImageView
                android:id="@+id/vedio_snapshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_10dp"
                android:layout_toLeftOf="@+id/vedio_voice"
                android:src="@drawable/factory_device_bar_carmer" />

            <ImageView
                android:id="@+id/vedio_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_10dp"
                android:layout_toLeftOf="@+id/vedio_zoom"
                android:src="@drawable/factory_device_voice" />

            <ImageView
                android:id="@+id/vedio_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_5dp"
                android:src="@drawable/factory_device_bar_expand" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/vedio_project"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <com.vomont.yundudao.view.circleImageView.CircleImageView
                android:layout_width="@dimen/layout_30dp"
                android:layout_height="@dimen/layout_30dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_3dp"
                android:text="123" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_3dp"
                android:layout_weight="1"
                android:text="上传"
                android:textColor="@color/main_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qcenter_calarter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qcenter_calarter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qcenter_calarter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_20dp"
            android:layout_marginRight="@dimen/layout_20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12321321"
                    android:textSize="@dimen/textSize_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传时间："
                    android:textSize="@dimen/textSize_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12321321"
                    android:textSize="@dimen/textSize_12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_10dp"
                android:text="23123123124451251251fksajkfsahklfsan jkasfhaskldasjklj"
                android:textSize="@dimen/textSize_15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_15dp"
            android:background="@color/list_top"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:src="@drawable/mix" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/new_pic"
                android:textColor="@color/actionsheet_gray"
                android:textSize="@dimen/textSize_13sp" />

            <ImageView
                android:layout_width="@dimen/layout_30dp"
                android:layout_height="@dimen/layout_30dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/layout_10dp"
                android:src="@drawable/securitycode_tabletag" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/layout_10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_top"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:src="@drawable/mix" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/new_problem"
                android:textColor="@color/actionsheet_gray"
                android:textSize="@dimen/textSize_13sp" />

            <ImageView
                android:layout_width="@dimen/layout_30dp"
                android:layout_height="@dimen/layout_30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_10dp"
                android:src="@drawable/securitycode_tabletag" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>