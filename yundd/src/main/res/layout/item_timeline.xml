<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/timeline_date"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:textColor="@color/actionsheet_gray_ligth"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/timeline_year"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:textColor="@color/main_color"
            android:textSize="@dimen/textSize_10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/layout_5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/timeline_poit"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/circle" />

        <View
            android:layout_width="@dimen/layout_3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/actionsheet_gray_ligth" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/actionsheet_gray_ligth"
                android:textSize="@dimen/textSize_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/actionsheet_gray_ligth"
                android:textSize="@dimen/textSize_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/actionsheet_gray_ligth"
                android:textSize="@dimen/textSize_13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>