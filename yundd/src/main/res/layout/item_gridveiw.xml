<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/device_statue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:layout_marginTop="@dimen/layout_8dp"
        android:background="@drawable/gridview_linearlayout"
        android:orientation="vertical" >

        <TextView
            android:layout_gravity="center"
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/layout_3dp"
            android:paddingTop="@dimen/layout_3dp"
            android:textColor="@color/main_color"
            android:textSize="@dimen/textSize_12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/device_privilege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/factory_lock" />

</RelativeLayout>