<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:paddingBottom="@dimen/layout_3dp"
        android:paddingTop="@dimen/layout_3dp"
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/alertdialog_line"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_5dp"
        android:text="A"
        android:textColor="@color/biantai_gray"
        android:textSize="@dimen/textSize_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_5dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/layout_10dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_5dp"
            android:layout_marginBottom="@dimen/layout_5dp"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_15sp" />

        <com.vomont.yundudao.view.NoScrollGridView.NoScrollGridView
            android:id="@+id/gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_100dp"
            android:listSelector="@color/back_color"
            android:numColumns="2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_0.5dp"
            android:layout_marginTop="@dimen/layout_30dp"
            android:background="@color/alertdialog_line" />
    </LinearLayout>

</LinearLayout>