<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/textSize_15sp"
        android:layout_marginRight="@dimen/layout_15dp"
        android:layout_marginTop="@dimen/layout_10dp"
        android:background="@drawable/linearlayout_bg"
        android:orientation="vertical"
        android:padding="@dimen/layout_15dp" >

        <TextView
            android:id="@+id/item_sys_msg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize_16sp" />

        <TextView
            android:id="@+id/item_sys_msg_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize_13sp" />

        <TextView
            android:id="@+id/item_sys_msg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10dp"
            android:maxLength="200"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize_13sp" />

        <RelativeLayout
            android:id="@+id/item_sys_msg_action"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_30dp"
            android:layout_marginTop="@dimen/layout_10dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_0.5dp"
                android:background="@color/alertdialog_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/look_allmsg"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textSize_12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/message_sys_arrows" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>