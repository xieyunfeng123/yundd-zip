<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_vedio"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:background="@color/top_app_color"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/vedio_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/layout_20dp"
            android:scaleType="center"
            android:src="@drawable/registernaritem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/vedio_play"
            android:textColor="@color/top_text_color"
            android:textSize="@dimen/textSize_18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_200dp"
        android:background="@color/black" >

        <com.vomont.yundudao.view.video.CommonVideoView
            android:id="@+id/play_video"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_attribute"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/vedio_recorde"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_13sp" />

            <TextView
                android:id="@+id/recorde_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/layout_15dp"
                android:layout_weight="3"
                android:textColor="@color/main_color"
                android:textSize="@dimen/textSize_13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_0.5dp"
            android:background="@color/alertdialog_line" />

        <LinearLayout
            android:id="@+id/ll_man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/look_man"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_13sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_15dp"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <TextView
                    android:text="请选择查看人"
                    android:id="@+id/look_man"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/textSize_13sp" />

                <ImageView
                    android:layout_width="@dimen/layout_20dp"
                    android:layout_height="@dimen/layout_20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/spotsupervision_upload_jiantou" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_0.5dp"
            android:background="@color/alertdialog_line" />

        <LinearLayout
            android:id="@+id/ll_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/vedio_address"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_13sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_15dp"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <TextView
                    android:text="请选择巡视点"
                    android:id="@+id/vedio_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/textSize_13sp" />

                <ImageView
                    android:layout_width="@dimen/layout_20dp"
                    android:layout_height="@dimen/layout_20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/spotsupervision_upload_jiantou" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_0.5dp"
            android:background="@color/alertdialog_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/vedio_conn"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/layout_15dp"
                android:layout_weight="3"
                android:textColor="@color/main_color"
                android:textSize="@dimen/textSize_13sp" />
        </LinearLayout>

        <EditText
            android:hint="请输入视频描述"
            android:textSize="@dimen/textSize_13sp"
            android:id="@+id/input_vedio_conn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_80dp"
            android:layout_margin="@dimen/layout_10dp"
            android:background="@drawable/linearlayout_bg"
            android:gravity="left" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_vedio_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/vedio_preservation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/zhenggai" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/spotsupervision_save" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/preservation"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_16sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vedio_upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/spotsupervision_upload_shixin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/upload"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_16sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>