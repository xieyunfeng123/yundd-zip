<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/createproblem_top"
        layout="@layout/top_layout" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/create_img_getimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_10dp"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:layout_marginTop="@dimen/layout_10dp"
                    android:src="@drawable/qcenter_changepicture" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/add_img"
                    android:textColor="@color/actionsheet_gray"
                    android:textSize="@dimen/textSize_13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_0.5dp"
                android:background="@color/alertdialog_line" />

      
            <com.vomont.yundudao.view.NoScrollGridView.NoScrollGridView
                android:id="@+id/send_problem_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:columnWidth="90dp"
                android:horizontalSpacing="3dp"
                android:listSelector="@color/white"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="3dp" />

        

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_0.5dp"
                android:background="@color/alertdialog_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/back_color"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/create_problem_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layout_5dp"
                        android:layout_marginLeft="@dimen/layout_15dp"
                        android:layout_marginTop="@dimen/layout_5dp"
                        android:src="@drawable/qcenter_calarter" />

                    <TextView
                        android:id="@+id/create_problem_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/textSize_13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_0.5dp"
                    android:background="@color/alertdialog_line" />

                <LinearLayout
                    android:id="@+id/create_problem_factoryname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layout_5dp"
                        android:layout_marginLeft="@dimen/layout_15dp"
                        android:layout_marginTop="@dimen/layout_5dp"
                        android:src="@drawable/qcenter_factoryname" />

                    <TextView
                        android:id="@+id/create_problem_factoryname_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="巡视点"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textSize_13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_0.5dp"
                    android:background="@color/alertdialog_line" />

                <LinearLayout
                    android:id="@+id/create_problem_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layout_5dp"
                        android:layout_marginLeft="@dimen/layout_15dp"
                        android:layout_marginTop="@dimen/layout_5dp"
                        android:src="@drawable/qcenter_tag" />

                    <TextView
                        android:id="@+id/create_problem_tag_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="标签"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textSize_13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_0.5dp"
                    android:background="@color/alertdialog_line" />

                <LinearLayout
                    android:id="@+id/create_problem_dealman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layout_5dp"
                        android:layout_marginLeft="@dimen/layout_15dp"
                        android:layout_marginTop="@dimen/layout_5dp"
                        android:src="@drawable/qcenter_dealpeople" />

                    <TextView
                        android:id="@+id/create_problem_dealman_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="处理人"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textSize_13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_0.5dp"
                    android:background="@color/alertdialog_line" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/create_problem_copyman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layout_5dp"
                        android:layout_marginLeft="@dimen/layout_15dp"
                        android:layout_marginTop="@dimen/layout_5dp"
                        android:src="@drawable/qcenter_otherpeople" />

                    <TextView
                        android:id="@+id/create_problem_copyman_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="抄送人"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textSize_13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_0.5dp"
                    android:background="@color/alertdialog_line" />

                <LinearLayout
                    android:id="@+id/create_problem_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/create_problem_content_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/layout_10dp"
                        android:layout_marginLeft="@dimen/layout_15dp"
                        android:layout_marginTop="@dimen/layout_10dp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textSize_13sp"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_0.5dp"
                    android:background="@color/alertdialog_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/layout_10dp"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:layout_marginTop="@dimen/layout_10dp"
                    android:text="问题描述"
                    android:textColor="@color/actionsheet_gray"
                    android:textSize="@dimen/textSize_13sp" />

                <EditText
                    android:maxLength="20"
                    android:id="@+id/creat_problem_comment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_120dp"
                    android:layout_marginBottom="@dimen/layout_3dp"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:layout_marginRight="@dimen/layout_15dp"
                    android:layout_marginTop="@dimen/layout_10dp"
                    android:background="@drawable/linearlayout_bg"
                    android:gravity="left|top"
                    android:hint="@string/addspeak"
                    android:textSize="@dimen/textSize_13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>