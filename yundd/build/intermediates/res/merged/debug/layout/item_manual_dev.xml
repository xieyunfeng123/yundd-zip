<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_manual_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/layout_10dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textSize_12sp" />

            <ImageView
                android:id="@+id/item_manual_delete"
                android:layout_width="@dimen/layout_25dp"
                android:layout_height="@dimen/layout_25dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/layout_5dp"
                android:src="@drawable/handtour_minus" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_0.5dp"
            android:background="@color/alertdialog_line" />
    </LinearLayout>

</LinearLayout>