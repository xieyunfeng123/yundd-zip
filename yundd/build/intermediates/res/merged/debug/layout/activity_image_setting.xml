<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/img_setting_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/layout_10dp"
            android:scaleType="center"
            android:src="@drawable/left_k" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/img_setting_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_18sp" />

            <TextView
                android:id="@+id/img_setting_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_18sp" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_img_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/edit_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/layout_30dp"
                android:layout_height="@dimen/layout_30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_5dp"
                android:src="@drawable/bianji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="编辑"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/layout_30dp"
                android:layout_height="@dimen/layout_30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_5dp"
                android:src="@drawable/delete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>