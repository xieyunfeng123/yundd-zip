<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_10dp"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_vedio_problem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textSize_12sp" />

            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/item_vedio_problem_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textSize_12sp" />

            <TextView
                android:id="@+id/item_vedio_problem_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="@dimen/layout_15dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textSize_12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_0.5dp"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginRight="@dimen/layout_15dp"
            android:background="@color/alertdialog_line" />
    </LinearLayout>

</LinearLayout>