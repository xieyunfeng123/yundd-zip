<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical" >

    <include layout="@layout/top_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45dp"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:layout_marginTop="@dimen/layout_10dp"
        android:background="@drawable/linearlayout_bg"
        android:padding="@dimen/layout_5dp" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/register_username" />

        <EditText
            android:id="@+id/register_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/inputnum"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textSize="@dimen/textSize_16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/register_error_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:gravity="right"
        android:textColor="@color/error_color"
        android:textSize="@dimen/textSize_10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45dp"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:layout_marginTop="@dimen/layout_5dp"
        android:background="@drawable/linearlayout_bg"
        android:padding="@dimen/layout_5dp" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/register_message" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/register_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/mesg_register"
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true"
                android:textSize="@dimen/textSize_16sp" />

            <TextView
                android:id="@+id/register_code_get"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/text_register"
                android:gravity="center"
                android:paddingBottom="@dimen/layout_5dp"
                android:paddingTop="@dimen/layout_5dp"
                android:text="@string/get_msg"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/register_error_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:gravity="right"
        android:textColor="@color/error_color"
        android:textSize="@dimen/textSize_10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45dp"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:layout_marginTop="@dimen/layout_5dp"
        android:background="@drawable/linearlayout_bg"
        android:padding="@dimen/layout_5dp" >

        <ImageView
            android:layout_width="0dp"
           android:layout_height="@dimen/layout_25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/register_password" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/inputpsd"
            android:inputType="textPassword"
            android:maxLength="12"
            android:singleLine="true"
            android:textSize="@dimen/textSize_16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/register_error_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:gravity="right"
        android:textColor="@color/error_color"
        android:textSize="@dimen/textSize_10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45dp"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:layout_marginTop="@dimen/layout_5dp"
        android:background="@drawable/linearlayout_bg"
        android:padding="@dimen/layout_5dp" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/register_password" />

        <EditText
            android:id="@+id/register_again_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/nextinputpsd"
            android:inputType="textPassword"
            android:maxLength="12"
            android:singleLine="true"
            android:textSize="@dimen/textSize_16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/register_error_againpsd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:gravity="right"
        android:textColor="@color/error_color"
        android:textSize="@dimen/textSize_10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/layout_5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/look_psd"
            android:textColor="@android:color/black" />

        <com.vomont.yundudao.view.checkswitch.CheckSwitchButton
            android:id="@+id/register_look_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/layout_20dp"
            android:enabled="true" />
    </LinearLayout>

    <Button
        android:id="@+id/register_finish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45dp"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:layout_marginTop="@dimen/layout_5dp"
        android:background="@drawable/text_register_pressed"
        android:enabled="false"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_16sp" />

</LinearLayout>